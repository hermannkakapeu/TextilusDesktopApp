<MainWindow>:
    canvas.before:
        Color:
            rgb: [.9, .9, 1, 1]
        Rectangle :
            size: self.size


    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            size_hint: 1, 0.20
            pos_hint : {"top":1}
            RelativeLayout:
                canvas.before:
                    Color:
                        rgb: [.9, .9, 0, 1]
                    Rectangle :
                        size: self.size
                BoxLayout:
                Image:
                    source: "images/esith.png"
                    size_hint: .07, 0.5

                Label:
                    text: "Textilus"
                    color :root.blackColor







        BoxLayout:
            size_hint: 1, 0.80
            orientation: "horizontal"


            BoxLayout:
                size_hint: .15, 1
                RelativeLayout:
                    canvas.before:
                        Color:
                            rgb: [.1, .1, 1, 1]
                        Rectangle :
                            size: self.size
                    Button :
                        text: "log Out"
                        size_hint: .6, .06
                        pos_hint:{"center_x":0.5, "y": 0}
                        color: 1, 0, 0, 1
                        background_color: 1, 1, 0, 1
                        on_release:
                            app.root.current = "login"
                            root.manager.transition.direction = "down"

            BoxLayout:
                orientation : "vertical"

                BoxLayout:

                    id: graph1
                    #padding:10, 10, 0, 10
                    Graph:
                        id : graph
                        background_color: 0, 0, 0, .4
                        border_color: 0, 0, 1, 1
                        tick_color: 0, 0, 0, 1

                        x_ticks_minor: 10
                        x_ticks_major: 100
                        y_ticks_major: 0.2
                        y_grid_label: True
                        x_grid_label: True
                        xlabel: 'frequences'
                        ylabel: 'Y lii'
                        #padding: 1, 1, 5, 1
                        x_grid: True
                        y_grid: True
                        xmin:0
                        xmax:root.sample
                        ymin:-1
                        ymax:1



                BoxLayout:
                    size_hint: 1, .15
                    RelativeLayout:
                        canvas.before:
                            Color:
                                rgb: [0.4, 0.4, 0.4, .4]
                            Rectangle :
                                size: self.size
                        Slider :
                            id: freq
                            min: 1
                            max : 100
                            size_hint: None, None
                            size : 100, 10
                            pos_hint: {"center_x": .5, "y": .8}
                            on_value :
                                root.update_plot(freq.value)
                                root.change_color(freq)
                        Button:
                            text : "+"
                            pos_hint: {"x": .93, "y": .9}
                            size_hint: None, None
                            width: 48
                            height: 48
                            on_release: root.add_plot()
                                #app.root.current = "mat"
                        Button:
                            text : "-"
                            pos_hint: {"x": 0, "y": .9}
                            size_hint: None, None
                            width: 48
                            height: 48
                            on_release: root.remove_plot()
                                #app.root.current = "mat"

